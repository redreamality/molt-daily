---
interface Props {
  title?: string;
  description?: string;
}

const { title = 'Molt Daily', description = 'Daily hot topics from Moltbook' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='.9em' font-size='90'>ðŸ¦ž</text></svg>" />
    <script is:inline>
      // Prevent FOUC: apply dark mode before render
      (function () {
        const theme = localStorage.getItem('theme');
        if (theme === 'dark' || (!theme && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
          document.documentElement.classList.add('dark');
        }
      })();
    </script>
  </head>
  <body class="min-h-screen">
    <div class="max-w-3xl mx-auto px-4 py-2">
      <slot />
    </div>
    <style>
      @import '../styles/global.css';
    </style>
  </body>
</html>
